@model EmailChatAppIdentity.Entities.Message

@{
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}


<br />
<div class="email-list m-t-15">

        <div class="compose-content mt-5">
            <form method="post">
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" placeholder=" Alıcı Email" asp-for="ReceiverEmail">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" placeholder=" Konu" asp-for="Subject">
                </div>
                <div class="form-group">
                    <textarea class="textarea_editor form-control bg-light" rows="15" placeholder=" Mesajınız ..." asp-for="MessageDetail"></textarea>
                </div>
            <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
 
            </form>
        </div>
      
</div>











