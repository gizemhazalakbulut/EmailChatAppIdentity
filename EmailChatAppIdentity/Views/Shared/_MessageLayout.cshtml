
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Quixlab - Bootstrap Admin Dashboard Template by Themefisher.com</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/quixlab-master/images/favicon.png">
    <!-- Custom Stylesheet -->
    <link href="/quixlab-master/css/style.css" rel="stylesheet">

</head>

<body>
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
   
    <div id="main-wrapper">
        <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="email-left-box">
                                    <a href="/Message/CreateMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                                    <div class="mail-list mt-4">
                                        <a href="/Message/Inbox/" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> Gelen Mesajlar <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.InboxCount</span> </a>
                                        <a href="/Message/SendBox/" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Mesajlar<span class="badge badge-danger badge-sm float-right m-t-5">@ViewBag.SendboxCount</span> </a>
                                        <a href="/Profile/ProfileDetail/" class="list-group-item border-0 p-r-0"><i class="fa fa-star-o font-18 align-middle mr-2"></i>Profilim</a>
                                        <a href="/Register/CreateUser/" class="list-group-item border-0 p-r-0">
                                            <i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Yeni Kullanıcı Kaydı</a>
                                        <a href="/Login/UserLogin/" class="list-group-item border-0 p-r-0">
                                            <i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Giriş Yap
                                        </a>
                                        <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="list-group-item border-0 p-r-0 btn btn-link text-left">
                                                <i class="fa fa-trash font-18 align-middle mr-2"></i> Çıkış Yap
                                            </button>
                                        </form>

                                    </div>
                                </div>

                                <div class="email-right-box">

                                    @RenderBody()
                                  
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
    </div>
    <div class="footer">
            <div class="copyright">
                <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
            </div>
        </div>
   
    <script src="/quixlab-master/plugins/common/common.min.js"></script>
    <script src="/quixlab-master/js/custom.min.js"></script>
    <script src="/quixlab-master/js/settings.js"></script>
    <script src="/quixlab-master/js/gleek.js"></script>
    <script src="/quixlab-master/js/styleSwitcher.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
