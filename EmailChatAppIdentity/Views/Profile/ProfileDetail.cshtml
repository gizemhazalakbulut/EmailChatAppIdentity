
@{
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}

<h3>Profil Bilgileri</h3>
<br />
<div class="email-list m-t-15">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="media align-items-center mb-4">
                    <img class="mr-3" src="@ViewBag.profileImageUrl" width="80" height="80" alt="">
                    <div class="media-body">
                        <h3 class="mb-0">@ViewBag.name @ViewBag.surname</h3>
                        <p class="text-muted mb-0">@ViewBag.userName</p>
                    </div>
                </div>

                <div class="row mb-5">
                    <div class="col">
                        <div class="card card-profile text-center">
                            <span class="mb-1 text-primary"><i class="icon-people"></i></span>
                            <h3 class="mb-0">@ViewBag.messageCount</h3>
                            <p class="text-muted px-4">Gelen Mesaj Sayısı</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card card-profile text-center">
                            <span class="mb-1 text-warning"><i class="icon-user-follow"></i></span>
                            <h3 class="mb-0">@ViewBag.sendMessageCount</h3>
                            <p class="text-muted">Giden Mesaj Sayısı</p>
                        </div>
                    </div>
                </div>

                <h4>İletişim</h4>
                <ul class="card-profile__info">
                    <li class="mb-1"><strong class="text-dark mr-4">Telefon:</strong> <span>@ViewBag.phoneNumber</span></li>
                    <li><strong class="text-dark mr-4">Email:</strong> <span>@ViewBag.email</span></li>
                    <li><strong class="text-dark mr-4">Şehir:</strong> <span>@ViewBag.city</span></li>
                </ul>
            </div>
        </div>
    </div>



</div>



